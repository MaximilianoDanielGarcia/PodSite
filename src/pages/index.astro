---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pod for your podcasts.">
	<main>
		<div class="logo">
			<img src="/assets/logo.svg" alt="">
		</div>
		<picture>
			<source srcset="/assets/image-host-mobile.jpg" media="(width <= 750px)">
			<source srcset="/assets/image-host-tablet.jpg" media="(width <= 1100px)">
			<img src="/assets/image-host-desktop.jpg" alt="A man singing in a studio">
		</picture>
		<section>
			<h1><span class="highlight">Publish your podcasts</span> everywhere.</h1>
			<p class="text">
				Upload your audio to Pod with a single click. Weâ€™ll then distribute your podcast to Spotify, Apple Podcasts, Google Podcasts, Pocket Casts and more!
			</p>
			<div>
				<form id="form" novalidate>
					<input type="email" name="email" id="email" placeholder="Email address" required>
					<button type="submit">Request Access</button>
				</form>
				<p id="message-validation">Oops! Please add your email</label>
			</div>
			<div class="icon-container">
				<img src="/assets/spotify.svg" alt="">
				<img src="/assets/apple-podcast.svg" alt="">
				<img src="/assets/google-podcasts.svg" alt="">
				<img src="/assets/pocket-casts.svg" alt="">
			</div>
		</section>
		<div class="pattern">
			<img src="/assets/bg-pattern-dots.svg" alt="">
		</div>
	</main>
</Layout>

<script>

	const form = document.getElementById('form');
	const email = document.getElementById('email');
	const msgValidation = document.getElementById('message-validation');

	const regexForEmailValidation = /^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$/;

	email.addEventListener('focus', (e) => {
		msgValidation.style.opacity = '0';
	})

	form.addEventListener("submit", (event) => {
		const email = event.target.children[0];
		
		if(email.value != ''){
			if(regexForEmailValidation.test(email.value)){
				msgValidation.style.opacity = '0';
			}
			else {
				msgValidation.innerHTML = 'Oops! Please check your email';
				msgValidation.style.opacity = '1';
				event.preventDefault();
			}
		}
		else {
			msgValidation.innerHTML = 'Oops! Please add your email';
			msgValidation.style.opacity = '1';
			event.preventDefault();
		}
	});

</script>

<style>

	main {
		display: flex;
		align-items: flex-end;
		height: 100%;
		position: relative;
		width: 100%;
		max-width: 1440px;
		overflow: hidden;
	}

	picture {
		position: absolute;
		top: 50%;
		right: 0;
		transform: translateY(-50%);
		z-index: -1;
		overflow: hidden;
	}

	section {
		position: absolute;
		bottom: 10%;
		display: flex;
		flex-direction: column;
		gap: 25px;
		width: 60%;
		background: var(--dark-blue-bg);
		min-width: 900px;
		padding: 70px 40px 40px 170px;
	}

	h1 {
		text-transform: uppercase;
		font-size: 52px;
		font-weight: 100;
		color: var(--white);
	}

	.text {
		width: 70%;
		padding-right: 40px;
		line-height: 28px;
	}

	form {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 58px;
		width: min-content;
		background: var(--gray-blue);
		gap: 50px;
		padding-left: 30px;
		padding-right: 5px;
		border-radius: 28px;
		margin-top: 20px;
	}

	form:focus-within {
		border: 2px dotted var(--light-green);
	}

	input[type="email"] {
		background: var(--gray-blue);
		border: none;
		height: 100%;
		color: var(--white);
		font-weight: 700;
		font-family: 'Chivo', sans-serif;
	}

	input[type="email"]::placeholder {
		color: var(--gray-text);
		font-family: 'Chivo', sans-serif;
		font-weight: 700;
		font-size: 14.5px;
		border: none;
		background: var(--gray-blue);
	}

	input[type="email"]:focus-visible {
		outline: none;
		background: var(--gray-blue);
	}

	input:-webkit-autofill,
	input:-webkit-autofill:hover, 
	input:-webkit-autofill:focus, 
	input:-webkit-autofill:active  {
	-webkit-box-shadow: 0 0 0 30px var(--gray-blue) inset !important;
	-webkit-text-fill-color: var(--white) !important;
	}

	#message-validation {
		font-size: 14px;
		margin-top: 10px;
		padding-left: 20px;
		opacity: 0;
		color: var(--light-green);
	}

	button {
		background: var(--light-green);
		border: none;
		color: var(--dark-blue-bg);
		font-family: 'Chivo', sans-serif;
		font-weight: 700;
		height: 46px;
		padding-inline: 30px;
		border-radius: 23px;
		font-size: 14.5px;
		text-wrap: nowrap;
		cursor: pointer;
	}

	button:hover {
		background: var(--vary-light-green);
	}

	.logo {
		position: absolute;
		top: 110px;
		left: 170px;
	}

	.pattern {
		position: absolute;
		right: 0;
		bottom: 90px;
	}
	
	.highlight {
		color: var(--light-green);
	}

	.icon-container {
		display: flex;
		align-items: center;
		gap: 40px;
		margin-top: 10px;
	}

	@media screen and (width <= 1100px) {
		picture {
			top: 0;
			transform: translateY(0%);
		}

		section {
			bottom: 5%;
			width: 60%;
			background: var(--dark-blue-bg);
			min-width: 700px;
			padding: 70px 40px 40px 50px;
		}

		.logo {
			top: 50px;
			left: 50px;
		}

		.pattern {
			bottom: 0;
		}

		
		h1 {
			font-size: 48px;
		}

		.text {
			width: 62%;
			font-size: 16px;
		}
	}

	@media screen and (width <= 750px) {

		picture {
			position: absolute;
			top: 0;
			left: 0;
			transform: translateY(0%);
			width: 100%;
			mix-blend-mode: soft-light;
		}

		picture > img {
			object-fit: cover;
			width: 100%;
		}

		section {
			position: relative;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			text-align: center;
			gap: 25px;
			width: 100%;
			height: 100vh;
			background: transparent;
			min-width: 100%;
			padding: 20px;
		}

		h1 {
			font-size: clamp(26px, 6vw, 48px);
			line-height: 36px;
		}

		.text {
			width: 100%;
			padding-right: 0px;
			line-height: 28px;
			font-size: clamp(15px, 2.4vw, 18px);
		}

		.logo {
			top: 7%;
			left: 50%;
			transform: translateX(-50%);
			z-index: 2;
		}

		.pattern {
			display: none;
		}

		form {
			position: absolute;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			width: 100%;
			height: fit-content;
			background: transparent;
			gap: 20px;
			padding: 0;
			padding-inline: 20px;
			margin-top: 0px;
			left: 0;
			bottom: 10%;
		}

		form:focus-within {
			border: none;
		}

		#message-validation {
			position: absolute;
			font-size: 14px;
			margin-top: 0px;
			padding-left: 0px;
			bottom: 5%;
			left: 50%;
			transform: translateX(-50%);
		}

		input[type="email"] {
			height: 46px;
			width: 100%;
			border-radius: 23px;
			padding-left: 30px;
		}

		button {
			width: 100%;
		}

		.icon-container {
			gap: 0px;
			margin-top: -25px;
			display: flex;
			align-items: center;
			justify-content: center;
			width: 100%;
		}

		.icon-container > img {
			transform: scale(.7);
		}

		.icon-container > img:nth-of-type(1) {
			margin-left: 5px;
		}
		.icon-container > img:nth-of-type(2){
			margin-left: -15px;
		}
		.icon-container > img:nth-of-type(3){
			margin-left: -20px;
		}
		.icon-container > img:nth-of-type(4){
			margin-left: -25px;
		}
	}

</style>
