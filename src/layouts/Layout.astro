---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Chivo:wght@100;300;400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--light-green: hsl(158, 80%, 63%);
		--vary-light-green: hsl(157, 100%, 85%);
		--dark-blue-bg: hsl(222, 37%, 11%);
		--dark-blue-transparent-bg: hsla(222, 37%, 11%, 0.8);
		--gray-blue: hsl(225, 26%, 23%);
		--gray-text: hsl(223, 11%, 63%);
		--white: hsl(228, 14%, 93%);
	}

	*, *::after, *::before {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	body {
		display: grid;
		place-items: center;
		min-height: 100vh;
		font-family: 'Chivo', sans-serif;
		font-weight: 300;
		background-color: var(--dark-blue-bg);
		color: var(--gray-text);
		font-size: 18px;
	}
	
</style>
